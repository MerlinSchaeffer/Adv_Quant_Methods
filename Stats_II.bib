@article{junger_immigration_2022,
	title = {Immigration and {Social} {Integration} - {What} are the {Consequences} of {Ethnic} {Residential} {Boundaries} and {Halos} for {Social} {Integration} in {Germany}?},
	url = {https://osf.io/rbnz5/},
	abstract = {Does ethnic diversity erode the social integration of contemporary mass-scale societies? Continued immigration and corresponding growing ethnic, racial, and religious diversity have prompted this important and highly contentious question. This article gives a brief in-troduction to the scientific literature on this question and derives from it a gap that it seeks to address: According to a small number of studies on related but different topics, ethnic diversity may be particularly detrimental to social integration if it takes shape as one of two specific types of ethnic residential segregation. The contested boundaries hypothesis has it that border regions sandwiched between homogeneous ethnic enclaves are particularly conflict prone and characterized by increased rates of crime. The halo-effect hypothesis claims that people who live in homogenous neighborhoods that border on ethnically di-verse ones (or are even encircled by them) are more likely to vote for right-wing populist parties. In this article, we expand both approaches to the study of social integration in theo-retical and empirical terms. With respect to theory building, we discuss why social integra-tion as indicated by generalized trust should suffer from these two types of ethnic segrega-tion. To test these claims empirically, we use data from the geo-coded German General So-cial Survey (ALLBUS/GGSS) 2016 and 2018 that we merge with 100mX100m spatial grid data from the German Census 2011. These data allow us to apply edge detection tech-niques to identify ethnic residential boundaries, and our recently-developed donut-method to measure ethnic residential halos. Our pre-registered study is the first investigation into the arguably important question whether ethnic residential boundaries and halos erode social integration. 
    Hosted on the Open Science Framework},
	language = {en},
	urldate = {2022-08-29},
	author = {Jünger, Stefan and Schaeffer, Merlin},
	year = {2022},
	note = {Publisher: OSF},
}

